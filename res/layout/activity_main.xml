<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/indexhome"
            android:gravity="center_horizontal"
            android:text="首页" />
        <TextView
            android:id="@+id/tvCangyou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/indexfriend"
            android:gravity="center_horizontal"
            android:text="藏友" />

        <ImageView
            android:id="@+id/tvChuiZi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
           android:src="@drawable/tabbar_x"
            android:gravity="center_horizontal"
             />
        <TextView
            android:id="@+id/tvCollect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/indexshops"
            android:gravity="center_horizontal"
            android:text="逛逛" />

        <TextView

            android:id="@+id/tvPersonalCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/indexpeople"
            android:gravity="center_horizontal"
            android:text="登录" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fg"
        android:layout_above="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
